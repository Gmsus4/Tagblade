---
import Termsofservice from "./Termsofservice.astro";
---

<form>
    <div class="grid gap-6 mb-6 md:grid-cols-2">
      <div>
        <label for="first_name" class="block mb-2 text-sm font-medium text-dark-background dark:text-background">Nombre</label>
        <input type="text" id="first_name" placeholder="John" required
          class="bg-background border-gray-300 text-dark-background text-sm rounded-lg block w-full p-2.5 dark:bg-dark-surface dark:border-dark-border dark:text-background focus:ring-primary focus:border-primary"/>
      </div>
      <div>
        <label for="last_name" class="block mb-2 text-sm font-medium text-dark-background dark:text-background">Apellido</label>
        <input type="text" id="last_name" placeholder="Doe" required
          class="bg-background border-gray-300 text-dark-background text-sm rounded-lg block w-full p-2.5 dark:bg-dark-surface dark:border-dark-border dark:text-background focus:ring-primary focus:border-primary"/>
      </div>
    </div>
    <div class="mb-6">
      <label for="email" class="block mb-2 text-sm font-medium text-dark-background dark:text-background">Correo electrónico</label>
      <input type="email" id="email" placeholder="john.doe@company.com" required
        class="bg-background border-gray-300 text-dark-background text-sm rounded-lg block w-full p-2.5 dark:bg-dark-surface dark:border-dark-border dark:text-background focus:ring-primary focus:border-primary"/>
    </div>
    <div class="mb-6">
      <label for="subject" class="block mb-2 text-sm font-medium text-dark-background dark:text-background">Asunto</label>
      <input type="text" id="subject" placeholder="Sitio web personal" required
        class="bg-background border-gray-300 text-dark-background text-sm rounded-lg block w-full p-2.5 dark:bg-dark-surface dark:border-dark-border dark:text-background focus:ring-primary focus:border-primary"/>
    </div>
    <div class="mb-6">
      <label for="message" class="block mb-2 text-sm font-medium text-dark-background dark:text-background">Mensaje</label>
      <textarea id="message" rows="4" placeholder="Escribe tu mensaje aquí..." required
        class="block w-full text-sm text-dark-background bg-background rounded-lg border border-gray-300 p-2.5 dark:bg-dark-surface dark:border-dark-border dark:text-background focus:ring-primary focus:border-primary"></textarea>
    </div>

    <div class="flex items-start mb-6">
      <div class="flex items-center h-5">
        <input id="remember" type="checkbox" required
          class="w-4 h-4 border border-gray-300 rounded-sm bg-background dark:bg-gray-700 dark:border-gray-600 focus:ring-3 focus:ring-primary focus:border-primary" />
      </div>
      <Termsofservice />
    </div>

    <button type="submit"
      class="cursor-pointer text-background bg-primary hover:bg-primary-dark duration-300 ease-in-out font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center">
      Enviar mensaje
    </button>
  </form>