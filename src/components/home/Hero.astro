---
import { Image } from "astro:assets";
import Button from "../common/Button.astro";
import { contactInfo } from "../../js/contactInfo";
import BtnScroll from "../common/BtnScroll.astro";
import Down from "../icons/Down.astro";
import Whatsapp from "../icons/Whatsapp.astro";
import Check from "../icons/Check.astro";
---

<section id="home" class="relative md:px-20 sm:px-10 px-5 bg-background dark:bg-dark-background bg-blend-multiply py-20 h-screen flex items-center overflow-hidden" aria-label="Sección principal: inicio">
  <!-- Elementos decorativos de fondo -->
  <div class="absolute inset-0 z-0">
    <!-- Gradiente superpuesto -->
    <div class="absolute inset-0 bg-gradient-to-b from-transparent via-transparent to-background/60 dark:to-dark-background/60 z-10"></div>
    
    <!-- Patrón de puntos decorativo -->
    <div class="absolute inset-0 opacity-10 dark:opacity-5 z-0">
      <div class="absolute right-0 top-0 w-1/2 h-1/2">
        <svg width="100%" height="100%" viewBox="0 0 100 100" preserveAspectRatio="none">
          <pattern id="pattern-circles" x="0" y="0" width="10" height="10" patternUnits="userSpaceOnUse">
            <circle cx="5" cy="5" r="1" fill="currentColor" class="text-primary"></circle>
          </pattern>
          <rect x="0" y="0" width="100%" height="100%" fill="url(#pattern-circles)"></rect>
        </svg>
      </div>
    </div>
    
    <!-- Formas geométricas decorativas -->
    <div class="absolute -top-24 -right-24 w-96 h-96 bg-primary/10 rounded-full filter blur-3xl"></div>
    <div class="absolute -bottom-32 -left-32 w-72 h-72 bg-primary/10 rounded-full filter blur-3xl"></div>
  </div>

  <!-- Contenido principal del hero -->
  <div class="w-full max-w-screen-xl mx-auto grid lg:grid-cols-2 gap-12 items-center z-20">
    <!-- Columna izquierda: Texto y CTA -->
    <div class="flex flex-col items-center lg:items-start text-center lg:text-left">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 dark:bg-primary/20 text-primary dark:text-primary-hover text-sm font-medium mb-6">
        <Check class="w-5 h-5"/>
        Diseño web profesional
      </div>
      
      <h1 class="mb-4 text-4xl font-extrabold tracking-tight leading-none dark:text-background md:text-5xl lg:text-6xl">
        Tu sitio web, <span class="text-primary">construido para durar</span>.
      </h1>
      
      <h2 class="mb-8 text-lg font-normal text-text-secundary dark:text-gray-300 max-w-2xl">
        Diseñamos y desarrollamos sitios web que combinan rendimiento, estética y propósito para impulsar tu negocio al siguiente nivel.
      </h2>
      
      <div class="flex flex-col space-y-4 sm:flex-row sm:space-y-0 sm:space-x-4">
        <Button className="bg-primary text-white" title="Ver nuestros planes" url="#planes" iconSize="6"/>
        <Button className="bg-primary text-white" title="Envíanos un WhatsApp" url={`https://wa.me/52${contactInfo.phone}`} icon={ Whatsapp } iconSize="6"/>
      </div>
    </div>
    
    <!-- Columna derecha: Ilustración o mockup -->
    <div class="hidden lg:flex justify-center items-center relative">
      <!-- Mockup de dispositivos -->
      <div class="relative w-full max-w-md">
        <!-- Laptop mockup -->
        <div class="relative z-20 transform">
          <div class="bg-transparent rounded-t-xl">
            <div class="rounded-lg overflow-hidden">
              <Image loading={"eager"} src="/mockupLaptop.webp" alt="Vista previa de un sitio web en móvil" class="w-full h-auto" width={400} height={800}/>
            </div>
          </div>
        </div>
        
        <!-- Tablet mockup -->
        <div class="absolute -bottom-10 -right-10 z-10 w-48 transform">
          <div class="bg-transparent rounded-xl">
            <div class="rounded-lg overflow-hidden">
              <Image loading={"eager"} src="/mockupTablet.webp" alt="Vista previa de un sitio web en móvil" class="w-full h-auto" width={400} height={800}/>
            </div>
          </div>
        </div>
        
        <!-- Phone mockup -->
        <div class="absolute -bottom-10 -left-5 z-30 w-32 transform">
          <div class="bg-transparent rounded-xl">
            <div class="rounded-lg overflow-hidden">
              <Image  loading={"eager"} src="/mockupMobile.webp" alt="Vista previa de un sitio web en móvil" class="w-full h-auto" width={400} height={800}/>
            </div>
          </div>
        </div>
        
        <!-- Decoración adicional -->
        <div class="absolute -z-10 inset-0 bg-gradient-to-r from-primary/20 to-primary/10 rounded-full filter blur-3xl transform scale-150"></div>
      </div>
    </div>
  </div>
  
  <!-- Scroll down indicator -->
  <div class="absolute bottom-8 z-30 left-0 right-0 flex items-center justify-center">
    <div class="absolute bottom-8 z-30 left-0 right-0 flex items-center justify-center">
      <BtnScroll title="Más información" url="#servicios">
        <Down class="w-5 h-5"/>
      </BtnScroll>
    </div>
  </div>
</section>