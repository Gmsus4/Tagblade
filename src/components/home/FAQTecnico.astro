---
import { faqTecnico } from "../../js/faq.js";
---

<div class="max-w-screen-xl mx-auto md:px-20 sm:px-10 px-5 ">
  <div class="space-y-4 grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3 py-16">
    {
      faqTecnico.map((item, index) => {
        return (
          <article 
            class="tech-faq-item border-b border-gray-200 dark:border-gray-800 pb-4"
            style={`animation-delay: ${index * 50}ms`}
          >
            <div class="flex items-start gap-4">
              <span class="flex-shrink-0 w-8 h-8 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center text-sm font-medium text-gray-600 dark:text-gray-400 mt-1">
                {index + 1}
              </span>
              <div class="flex-1">
                <h3 class="text-lg sm:text-xl font-medium text-text-secundary dark:text-dark-text mb-2">
                  {item.question}
                </h3>
                <p class="text-gray-600 dark:text-border-input leading-relaxed">
                  {item.answer}
                </p>
              </div>
            </div>
          </article>
        )
      })
    }
  </div>
</div>

<style>
  .tech-faq-item {
    opacity: 0;
    animation: fadeIn 0.4s ease-out forwards;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>