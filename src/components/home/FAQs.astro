---
import { Image } from "astro:assets";
import FAQ from "../common/FAQ.astro";
import TitleSection from "../common/TitleSection.astro";
---

<section class="md:px-20 sm:px-10 px-5 lg:scroll-mt-18 scroll-mt-12 w-full bg-background dark:bg-dark-background flex items-start justify-center min-h-[calc(100vh-70px)]" id="faqs" aria-label="Sección de preguntas frecuentes">
  <div class="max-w-screen-xl mx-auto md:px-4 px-1 lg:py-16 p-8 pb-4 grid grid-cols-7 gap-14 items-start pt-20">
    <figure class="col-span-7 hidden 2xl:flex 2xl:col-span-3 h-[600px]">
      <Image src="/faqs.webp" alt="Cuaderno con notas manuscritas junto a café y teléfono — sección de preguntas frecuentes." width="50" height="50" class="rounded-sm hidden md:flex w-full object-cover"/>
    </figure>
    <div class="col-span-7 2xl:col-span-4 grid gap-8">
      <h2 class="text-4xl max-w-5xl w-full mb-4 hidden 2xl:inline dark:text-dark-text">Preguntas <span class="text-6xl"><br>Frecuentes</span></h2>
      <div class="2xl:hidden flex">
        <TitleSection title="Preguntas frecuentes"/>
      </div>
      <div>
        <FAQ />
      </div>
    </div>
  </div>
</section>