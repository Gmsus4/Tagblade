---
import SectionHeader from '../common/SectionHeader.astro';
import { titles } from '../../js/titles';
import { servicios } from '../../js/servicios';
---
<section
  id="servicios"
  class="md:px-20 sm:px-10 px-5 lg:scroll-mt-18 scroll-mt-12 w-full bg-background dark:bg-dark-background flex items-center justify-center lg:min-h-[calc(100vh-70px)]"
>
  <div class="max-w-screen-xl mx-auto px-4 lg:py-16 p-12 pb-4" data-aos="fade-up">
    <SectionHeader title={titles.servicios.title} subtitle={titles.servicios.subtitle} icon={titles.servicios.icon}/>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 relatives">
      {
        servicios.map((servicio, index) => {
          const Icon = servicio.icon;
          return (
            <div class="rounded-2xl border-0.5 border-border-300 bg-white/60 dark:bg-dark-surface border border-gray-200 dark:border-dark-border p-8 md:p-10 hover:shadow-lg transition-all duration-300 group relative">              
              {/* Icono */}
              {Icon && (
                <div class="relative z-10">
                  <Icon
                    class={`w-14 h-14 ${servicio.color} rounded-full p-3 absolute -top-12 -right-12 z-30 transform group-hover:rotate-12 transition-transform duration-500`}
                  />
                </div>
              )}
              
              {/* Etiqueta de categoría */}
              <span
                class={`text-xs font-medium inline-flex items-center px-2.5 py-0.5 rounded-md mb-3 
                ${servicio.color ?? 'bg-green-100 text-green-800 dark:bg-gray-700 dark:text-green-400'}`}
              >
                {servicio.title}
              </span>
              
              {/* Título del servicio */}
              <h2 class="text-gray-900 dark:text-white text-2xl font-bold mb-3 relative">
                {servicio.subtitle}
                <div class="h-1 w-12 bg-primary/40 mt-2 transition-all duration-300 group-hover:w-20"></div>
              </h2>
              
              <p class="text-gray-600 dark:text-gray-300 text-sm mb-4 relative z-10">{servicio.description}</p>
              
              {/* Indicador visual */}
              <div class="absolute bottom-4 right-4 opacity-0 group-hover:opacity-100 transition-all duration-500">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </div>
            </div>
          );
        })
      }
    </div>
  </div>
</section>