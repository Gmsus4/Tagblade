---
import { titles } from '../../js/titles';
import { servicios } from '../../js/servicios';
import TitleSection from '../common/TitleSection.astro';
---
<section
  id="servicios"
  class="md:px-20 sm:px-10 px-5 lg:scroll-mt-18 scroll-mt-12 bg-background dark:bg-dark-background flex items-center justify-center lg:min-h-[calc(100vh-40px)]"
  aria-label="Sección de Servicios"
>
  <div class="max-w-screen-xl mx-auto px-0 lg:py-16 p-12 py-12">
    <div data-aos="fade-down" data-aos-duration="800">
      <TitleSection title={titles.servicios.title} titleHeader={titles.servicios.titleHeader}/>
    </div>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 relative mt-10">
      {
        servicios.map((servicio, index) => {
          const Icon = servicio.icon;
          return (
            <article 
              class="service-card rounded-xl bg-white dark:bg-bg-surface p-8 md:p-10 transition-all duration-300 group relative overflow-hidden border border-gray-200/80 dark:border-gray-700/50"
              data-aos="fade-up" 
              data-aos-duration="800" 
              data-aos-delay={index * 100}>              
              {/* Efecto de hielo sutil */}
              <div class="ice-overlay absolute inset-0 opacity-0 pointer-events-none transition-opacity duration-700"></div>
              
              {/* Etiqueta de categoría */}
              <p class={`relative z-10 text-xs font-medium inline-flex items-center px-2.5 py-0.5 rounded-md mb-3 ${servicio.color ?? 'bg-green-100 text-green-800 dark:bg-gray-700 dark:text-green-400'}`}>
                {servicio.title}
              </p>
              
              {/* Título del servicio */}
              <h3 class="dark:text-text-light text-2xl mb-3 relative z-10">
                {servicio.subtitle}
                <div class="h-1 w-12 bg-primary mt-2 transition-all duration-300 group-hover:w-20 group-hover:bg-primary/60 dark:bg-primary-bright dark:group-hover:bg-primary-bright/60"></div>
              </h3>
              
              <p class="dark:text-text-light/75 text-subtitle-dark text-md relative z-10">{servicio.description}</p>
            </article>
          );
        })
      }
    </div>
  </div>
</section>