---
import Navbar from "../common/Navbar.astro";
import Contacto from "./Contacto.astro";
import FAQs from "./FAQs.astro";
import Footer from "./Footer.astro";
import Hero from "./Hero.astro";
import Planes from "./Planes.astro";
import Proyectos from "./Proyectos.astro";
import Servicios from "./Servicios.astro";
import SobreNosotros from "./Sobre-nosotros.astro";
---

<div id="container" class="relative overflow-x-hidden bg-background">
  <!-- Copos de nieve animados para toda la web -->
  <div class="snowflakes-global fixed inset-0 pointer-events-none z-10" aria-hidden="true">
    {[...Array(25)].map((_, i) => (
      <div class="snowflake-global" style={`left: ${Math.random() * 100}%; animation-delay: ${Math.random() * 15}s; animation-duration: ${10 + Math.random() * 15}s; font-size: ${0.8 + Math.random() * 1.5}em;`}>‚ùÑ</div>
    ))}
  </div>

  <header>
    <Navbar />
  </header>
  
  <main>
    <Hero />
    <Servicios />
    <Proyectos />
    <SobreNosotros />
    <Planes />
    <FAQs />
    <Contacto />
  </main>
  <Footer />
</div>

<style is:global>
  .snowflakes-global {
    position: fixed;
    width: 100%;
    height: 100%;
  }

  .snowflake-global {
    position: absolute;
    top: -10%;
    color: rgba(220, 240, 255, 0.7);
    user-select: none;
    animation: fall-global linear infinite;
  }

  @media (prefers-color-scheme: dark) {
    .snowflake-global {
      color: rgba(200, 220, 240, 0.5);
    }
  }

  @keyframes fall-global {
    0% {
      top: -10%;
      opacity: 0;
      transform: translateX(0) rotate(0deg);
    }
    10% {
      opacity: 1;
    }
    90% {
      opacity: 1;
    }
    100% {
      top: 110%;
      opacity: 0;
      transform: translateX(20px) rotate(360deg);
    }
  }
</style>