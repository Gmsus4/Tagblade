---
import FormContacto from "./FormContacto.astro";
---

<section id="contacto" class="section scroll-mt-20 bg-background dark:bg-dark-background m-0">
    <div class="px-4 mx-auto max-w-screen-xl lg:py-16">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        
        <!-- Formulario -->
        <div>
          <h1 class="text-primary dark:text-primary text-3xl lg:text-5xl font-extrabold mb-2">
            Contacto
          </h1>
          <p class="text-lg font-normal text-gray-500 dark:text-gray-400 mb-6">
            ¿Tienes una idea en mente? Hablemos y la hacemos realidad.
          </p>
  
          <FormContacto />
        </div>
  
        <!-- Imagen -->
        <div class="hidden lg:block h-full">
          <img src="https://images.pexels.com/photos/1797161/pexels-photo-1797161.jpeg" alt="Ilustración de contacto" class="h-full w-auto object-cover rounded-2xl">
        </div>
      </div>
    </div>
  </section>
  