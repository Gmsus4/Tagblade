---
export interface Props {
  email?: string;
  phone?: string;
  horario?: string;
  whatsapp?: boolean;
  socialMedia?: any[]
}
const { 
  email, 
  phone,
  horario,
  whatsapp = false,
  socialMedia
} = Astro.props;

---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-1 xl:grid-cols-2 gap-6 gap-x-10 px-0 py-6">
  <h3 class="text-xl md:text-2xl col-span-1 md:col-span-2 lg:col-span-1 xl:col-span-2 font-bold text-dark-background dark:text-background">
    Información de Contacto
  </h3>

   {email && (
        <div class="flex items-center gap-4">
            <div class="bg-primary/10 dark:bg-primary/20 p-3 rounded-lg">
                <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 text-primary"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
                </svg>
            </div>
            <div>
                <p class="text-sm text-gray-500 dark:text-gray-400">Correo electrónico</p>
                <a href={`mailto:${email}`} class="text-dark-background dark:text-background hover:text-primary dark:hover:text-primary transition-colors">
                    {email}
                </a>
            </div>
        </div>
   )}

  {
    phone && (
        <div class="flex items-center gap-4">
            <div class="bg-primary/10 dark:bg-primary/20 p-3 rounded-lg">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6 text-primary"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                    ></path>
                </svg>
            </div>
            <div>
                <p class="text-sm text-gray-500 dark:text-gray-400">Teléfono</p>
                <a href={`tel:${phone}`} class="text-dark-background dark:text-background hover:text-primary dark:hover:text-primary transition-colors">
                    +52 {phone}
                </a>
            </div>
        </div>
    )
  }

  {
    whatsapp && (
        <div class="flex items-center gap-4">
            <div class="bg-primary/10 dark:bg-primary/20 p-3 rounded-lg">
                <svg class="h-6 w-6 text-primary" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="M19.05 4.91A9.82 9.82 0 0 0 12.04 2c-5.46 0-9.91 4.45-9.91 9.91c0 1.75.46 3.45 1.32 4.95L2.05 22l5.25-1.38c1.45.79 3.08 1.21 4.74 1.21c5.46 0 9.91-4.45 9.91-9.91c0-2.65-1.03-5.14-2.9-7.01m-7.01 15.24c-1.48 0-2.93-.4-4.2-1.15l-.3-.18l-3.12.82l.83-3.04l-.2-.31a8.26 8.26 0 0 1-1.26-4.38c0-4.54 3.7-8.24 8.24-8.24c2.2 0 4.27.86 5.82 2.42a8.18 8.18 0 0 1 2.41 5.83c.02 4.54-3.68 8.23-8.22 8.23m4.52-6.16c-.25-.12-1.47-.72-1.69-.81c-.23-.08-.39-.12-.56.12c-.17.25-.64.81-.78.97c-.14.17-.29.19-.54.06c-.25-.12-1.05-.39-1.99-1.23c-.74-.66-1.23-1.47-1.38-1.72c-.14-.25-.02-.38.11-.51c.11-.11.25-.29.37-.43s.17-.25.25-.41c.08-.17.04-.31-.02-.43s-.56-1.34-.76-1.84c-.2-.48-.41-.42-.56-.43h-.48c-.17 0-.43.06-.66.31c-.22.25-.86.85-.86 2.07s.89 2.4 1.01 2.56c.12.17 1.75 2.67 4.23 3.74c.59.26 1.05.41 1.41.52c.59.19 1.13.16 1.56.1c.48-.07 1.47-.6 1.67-1.18c.21-.58.21-1.07.14-1.18s-.22-.16-.47-.28"/></svg>
            </div>
            <div>
                <p class="text-sm text-gray-500 dark:text-gray-400">WhatsApp</p>
                <a href={`https://wa.me/52${phone}`} class="text-dark-background dark:text-background hover:text-primary dark:hover:text-primary transition-colors">
                    +52 {phone}
                </a>
            </div>
        </div>
    )  
  }


  {
    horario && (
        <div class="flex items-center gap-4">
            <div class="bg-primary/10 dark:bg-primary/20 p-3 rounded-lg">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 text-primary"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            </div>
            <div>
                <p class="text-sm text-gray-500 dark:text-gray-400">
                    Horario de atención
                </p>
                <p class="text-dark-background dark:text-background">
                    {horario}
                </p>
            </div>
        </div>
    )
  }

  {
    socialMedia && (
        socialMedia.map((media, index) => {
            const Icon = media.icon;
            return (
                <div class="flex items-center gap-4">
                    <div class="bg-primary/10 dark:bg-primary/20 p-3 rounded-lg">
                        <Icon class="h-6 w-6 text-primary"/>                    
                    </div>
                    <div>
                        <p class="text-sm text-gray-500 dark:text-gray-400">
                            {media.name}
                        </p>
                        <a href={media.url} class="text-dark-background dark:text-background hover:text-primary dark:hover:text-primary transition-colors">
                            Ir al perfil
                        </a>
                    </div>
                </div>
            )
        })
    )
  }

</div>
