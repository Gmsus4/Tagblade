---
import Email from '../icons/Email.astro';
import Phone from '../icons/Phone.astro';
import Whatsapp from '../icons/Whatsapp.astro';
import Clock from '../icons/Clock.astro';

export interface Props {
  email?: string;
  phone?: string;
  horario?: string;
  whatsapp?: boolean;
  socialMedia?: any[]
}
const { 
  email, 
  phone,
  horario,
  whatsapp = false,
  socialMedia
} = Astro.props;


const info = [
    { 
        name: "Email", 
        href: `mailto:${email}`,
        title: "Correo electrónico",
        text: email,
        icon:  Email,
    },
    { 
        name: "Teléfono", 
        href: `tel:${phone}`,
        title: "Teléfono",
        text: `+52 ${phone}`,
        icon:  Phone,
    },
    { 
        name: "WhatsApp", 
        href: `https://wa.me/52${phone}`,
        title: "WhatsApp",
        text: `+52 ${phone}`,
        icon:  Whatsapp,
    },
    { 
        name: "Horario de atención", 
        href: null,
        title: "Horario de atención",
        text: horario,
        icon:  Clock,
    },
];
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-1 xl:grid-cols-2 gap-6 gap-x-10 px-0 py-6">
  <!-- <h3 class="md:text-2xl col-span-1 md:col-span-2 lg:col-span-1 xl:col-span-2 text-dark-background dark:text-white text-2xl">
    Información de Contacto
  </h3> -->
    {
        info.map((item, index) => {
            const Icon = item.icon;
            return (
                <a href={item.href} target="_blank" class="flex items-center gap-4 justify-start text-primary hover:text-white group">
                    <div class="w-11 h-11 rounded-xl bg-primary/10 dark:bg-primary/20 group-hover:bg-primary group-hover:scale-110 grid place-items-center transition-all duration-300">
                        <Icon />
                    </div>
                    <div>
                        <p class="text-sm text-gray-500 dark:text-gray-400">{item.title}</p>
                        <span class="text-dark-background dark:text-background group-hover:text-primary dark:group-hover:text-primary transition-colors">
                            {item.text}
                        </span>
                    </div>
                </a>
            )
        })
    }
    
    {
        socialMedia!.map((item, index) => {
            const Icon = item.icon;
            return (
                <a href={item.url} target="_blank" class="flex items-center gap-4 justify-start text-primary hover:text-white group">
                    <div class="w-11 h-11 rounded-xl bg-primary/10 dark:bg-primary/20 group-hover:bg-primary group-hover:scale-110 grid place-items-center transition-all duration-300">
                        <Icon class="h-6 w-6" />
                    </div>
                    <div>
                        <p class="text-sm text-gray-500 dark:text-gray-400">{item.name}</p>
                        <span class="text-dark-background dark:text-background group-hover:text-primary dark:group-hover:text-primary transition-colors">
                            Ir al perfil
                        </span>
                    </div>
                </a>
            )
        })
    }
</div>
