---
interface SocialMediaItem {
  icon: string;
  name: string;
  url: string;
  color: string;
  hoverColor: string;
}

export interface Props {
  items?: SocialMediaItem[];
  title?: string;
}

const defaultItems: SocialMediaItem[] = [
  {
    icon: "instagram",
    name: "Instagram",
    url: "https://instagram.com/tuempresa",
    color: "from-purple-600 to-pink-500",
    hoverColor: "from-purple-500 to-pink-400"
  },
  {
    icon: "linkedin",
    name: "LinkedIn",
    url: "https://linkedin.com/company/tuempresa",
    color: "from-blue-600 to-blue-700",
    hoverColor: "from-blue-500 to-blue-600"
  },
  {
    icon: "twitter",
    name: "Twitter",
    url: "https://twitter.com/tuempresa",
    color: "from-blue-400 to-blue-500",
    hoverColor: "from-blue-300 to-blue-400"
  },
  {
    icon: "facebook",
    name: "Facebook",
    url: "https://facebook.com/tuempresa",
    color: "from-blue-800 to-blue-900",
    hoverColor: "from-blue-700 to-blue-800"
  }
];

const { items = defaultItems, title = "Conéctate con nosotros" } = Astro.props;
---

<div class="social-media-container bg-gradient-to-br from-white to-gray-50 dark:from-gray-800 dark:to-gray-900 rounded-2xl shadow-xl border border-gray-100 dark:border-gray-700 overflow-hidden" data-aos="fade-up" data-aos-duration="800" data-aos-delay="300">
  <div class="social-media-header bg-gradient-to-r from-gray-900 to-gray-800 dark:from-black dark:to-gray-900 p-6 relative">
    <div class="absolute top-0 right-0 w-40 h-40 bg-gradient-to-br from-primary/20 to-transparent rounded-full -mr-20 -mt-20"></div>
    <div class="absolute -bottom-5 -left-5 w-24 h-24 bg-primary/10 dark:bg-primary-dark/10 rounded-full"></div>
    
    <h3 class="text-2xl font-bold text-white relative z-10">{title}</h3>
    <p class="text-gray-300 mt-2 relative z-10">Mantente al día con nuestras últimas noticias y actualizaciones</p>
  </div>
  
  <div class="p-6 relative">
    <!-- Decorative elements -->
    <div class="absolute top-0 left-0 w-full h-full bg-[url('data:image/svg+xml;base64,')] opacity-10"></div>
    
    <div class="grid grid-cols-2 gap-4 relative z-10">
      {items.map(item => (
        <a 
          href={item.url} 
          class="social-card flex flex-col items-center p-5 rounded-xl bg-white dark:bg-gray-800 shadow-sm hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1 border border-gray-100 dark:border-gray-700 group overflow-hidden"
          target="_blank"
          rel="noopener noreferrer"
        >
          <div class={`icon-container bg-gradient-to-br ${item.color} group-hover:${item.hoverColor} w-14 h-14 rounded-full flex items-center justify-center shadow-lg mb-4 transition-transform duration-500 group-hover:scale-110`}>
            <i class={`lucide-${item.icon} w-7 h-7 text-white`}></i>
          </div>
          <span class="font-bold text-gray-900 dark:text-white text-center">{item.name}</span>
          <span class="text-xs text-gray-500 dark:text-gray-400 mt-1 flex items-center gap-1">
            <span>Síguenos</span>
            <i class="lucide-arrow-right w-3 h-3"></i>
          </span>
          
          <div class="followers-badge mt-2 px-2 py-1 bg-gray-100 dark:bg-gray-700 rounded-full text-xs text-gray-600 dark:text-gray-300">
            +2.5K seguidores
          </div>
        </a>
      ))}
    </div>
  </div>
  
  <div class="social-media-footer p-6 bg-gray-50 dark:bg-gray-800/50 border-t border-gray-100 dark:border-gray-700/50 flex justify-between items-center">
    <p class="text-gray-500 dark:text-gray-400 text-sm">Compartir es cuidar</p>
    <div class="flex space-x-2">
      <button class="p-2 bg-white dark:bg-gray-700 rounded-full shadow-sm hover:shadow-md transition-all">
        <i class="lucide-copy w-4 h-4 text-gray-600 dark:text-gray-300"></i>
      </button>
      <button class="p-2 bg-white dark:bg-gray-700 rounded-full shadow-sm hover:shadow-md transition-all">
        <i class="lucide-share w-4 h-4 text-gray-600 dark:text-gray-300"></i>
      </button>
    </div>
  </div>
</div>

<style>
  .social-media-container {
    position: relative;
  }
  
  .social-card {
    position: relative;
  }
  
  .social-card::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 0;
    background: linear-gradient(to top, rgba(var(--color-primary-rgb), 0.05), transparent);
    transition: height 0.3s ease;
    z-index: -1;
  }
  
  .social-card:hover::before {
    height: 100%;
  }
  
  .icon-container {
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
  }
  
  .icon-container::after {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255,255,255,0.4) 0%, transparent 70%);
    transform: translateY(-100%);
    transition: transform 0.5s ease;
  }
  
  .social-card:hover .icon-container::after {
    transform: translateY(0);
  }
  
  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); }
  }
  
  .followers-badge {
    position: relative;
    overflow: hidden;
  }
  
  .followers-badge::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(to right, transparent, rgba(255,255,255,0.3), transparent);
    animation: shine 2s infinite;
  }
  
  @keyframes shine {
    0% { left: -100%; }
    100% { left: 100%; }
  }
</style>