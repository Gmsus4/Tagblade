---
import { Image } from "astro:assets";
const { id, name, username, role, imageUrl, banner, socials = [] } = Astro.props;
---

<div class="relative inline-block">
  <!-- Main Avatar Card -->
  <div class="relative bg-white parent-hover overflow-hidden border border-border-default dark:bg-dark-surface rounded-sm p-4 transition-all duration-500 ease-out">
    <!-- Header with Banner -->
    <div class="relative -mx-4 -mt-4 mb-4 h-20 sm:h-24 overflow-hidden">
      <Image
        src={banner}
        alt="Banner"
        class="w-full h-full object-cover"
        width={320}
        height={96}
        loading="lazy"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent "></div>
      
      <!-- Status Badge -->
      <!-- <div class="absolute top-3 right-3 bg-green-500 text-white text-xs font-bold px-2 py-1 rounded-full flex items-center gap-1">
        <div class="w-1.5 h-1.5 bg-white rounded-full animate-pulse"></div>
        Online
      </div> -->
    </div>

    <!-- Avatar Section -->
    <div class="relative -mt-8 mb-4 flex justify-center">
      <div class="relative">
        <div class="w-16 h-16 sm:w-20 sm:h-20 rounded-full overflow-hidden ring-4 ring-background-button dark:ring-gray-800 shadow-lg">
          <Image 
            src={imageUrl}
            alt={`${name} avatar`}
            class="w-full h-full object-cover"
            width={80}
            height={80}
            loading="lazy"
          />
        </div>
        <!-- Verification Badge -->
        <div class="absolute -bottom-1 -right-1 w-6 h-6 bg-primary rounded-full flex items-center justify-center ring-2 ring-white dark:ring-gray-800">
          <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
        </div>
      </div>
    </div>

    <!-- Profile Info -->
    <div class="text-center mb-4">
      <h3 class="text-lg sm:text-xl font-bold text-gray-900 dark:text-white mb-1">{name}</h3>
      <p class="text-sm text-primary font-bold mb-2">@{username}</p>
      
      <!-- Role Chip -->
      <div class="inline-flex items-center gap-2 bg-background-secondary dark:bg-dark-background rounded-full px-3 py-1 text-xs font-medium text-gray-700 dark:text-gray-300">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
        {role}
      </div>
    </div>

    <!-- Social Links -->
    {socials.length > 0 && (
      <div class="mb-4 z-20">
        <div class="flex justify-center gap-2 flex-wrap">
          {socials.map((social: { icon: any; url: string | URL | null | undefined; name: string | null | undefined; }) => {
            const Icon = social.icon;
            return (
              <a 
                aria-label={`${social.name}`}
                href={social.url} 
                target="_blank" 
                rel="noopener noreferrer" 
                title={social.name}
                class="w-8 h-8 bg-background-secondary hover:bg-background-button dark:bg-dark-background dark:hover:bg-gray-600 rounded-lg flex items-center justify-center transition-all duration-200 hover:scale-110"
              >
                <Icon class="w-4 h-4 text-gray-600 dark:text-gray-300" />
              </a>
            );
          })}
        </div>
      </div>
    )}
  </div>
</div>

<style>
.parent-hover:hover > div>img:first-child {
  transform: scale(1.1);
  transition: transform 0.3s ease;
}
</style>