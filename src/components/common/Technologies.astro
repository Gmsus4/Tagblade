---
import { technologies } from "../../js/datos";
---

<div
class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-md"
data-aos="fade-up"
data-aos-duration="800"
data-aos-delay="200"
>
<h4 class="font-medium text-gray-900 dark:text-white mb-5 px-2">
  Nuestro entorno de trabajo
</h4>
<div class="flex flex-wrap justify-center gap-4">
  {
    technologies.map((tech) => (
      <div class="flex flex-col items-center justify-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg w-16 h-16">
        <img src={tech.logo} alt={tech.nombre} class="w-8 h-8" />
        <span class="text-xs text-gray-600 dark:text-gray-300 mt-1">
          {tech.nombre}
        </span>
      </div>
    ))
  }
</div>
</div>