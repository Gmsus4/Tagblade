---
// ServiceDetail.astro
interface Props {
  service: {
    title: string;
    subtitle: string;
    description: string;
    fullDescription: string;
    benefits: string[];
    features: {
      title: string;
      description: string;
      icon?: string;
    }[];
    process: {
      step: number;
      title: string;
      description: string;
    }[];
    images: {
      main: string;
      gallery?: string[];
    };
    cta: {
      text: string;
      href: string;
    };
  };
}

const { service } = Astro.props;
---

<section class="w-full bg-background dark:bg-dark-background">
  <!-- Hero Section -->
  <div class="relative bg-background-secondary dark:bg-dark-surface">
    <div class="relative max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-10 py-12 sm:py-16 lg:py-24">
      <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 xl:gap-16 items-center">
        <div class="space-y-6 lg:space-y-8">
          <div class="space-y-4 lg:space-y-6">
            <span class="inline-block px-4 py-1.5 bg-primary/10 dark:bg-primary/20 text-primary rounded-full text-xs sm:text-sm font-semibold uppercase tracking-wide">
              {service.title}
            </span>
            
            <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-text-primary dark:text-background leading-tight">
              {service.subtitle}
            </h1>
            
            <p class="text-base lg:text-lg text-text-secundary dark:text-text-btnScroll leading-relaxed">
              {service.fullDescription}
            </p>
          </div>

          <a 
            href={service.cta.href}
            class="inline-flex items-center gap-2 px-6 sm:px-8 py-3 sm:py-4 bg-primary hover:bg-primary/90 text-white rounded-xl font-semibold text-sm sm:text-base transition-all duration-300 hover:scale-105">
            {service.cta.text}
            <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
        
        <div class="relative order-first lg:order-last">
          <img 
            src={service.images.main} 
            alt={service.subtitle}
            class="w-full h-auto rounded-xl lg:rounded-2xl shadow-lg"
          />
        </div>
      </div>
    </div>
  </div>

  <!-- Benefits + Features Combined Section -->
  <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-10 py-16 lg:py-24">
    <!-- Benefits -->
    <div class="mb-16 lg:mb-20">
      <div class="mb-12 lg:mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold text-text-primary dark:text-background mb-4">
          Beneficios Clave
        </h2>
        <p class="text-base text-text-secundary dark:text-text-btnScroll max-w-2xl">
          Descubre cómo este servicio puede transformar tu negocio
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
        {service.benefits.map((benefit, index) => (
          <div class="group p-6 lg:p-8 bg-white dark:bg-dark-surface rounded-xl border-2 border-gray-200/50 dark:border-gray-700/50 hover:border-primary/50 dark:hover:border-primary/50 transition-all duration-300 hover:shadow-lg">
            <div class="flex items-start gap-4 mb-4">
              <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-primary/10 dark:bg-primary/20 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <span class="inline-block px-3 py-1 bg-primary/10 dark:bg-primary/20 text-primary rounded-full text-xs font-semibold">
                {String(index + 1).padStart(2, '0')}
              </span>
            </div>
            <p class="text-base text-text-primary dark:text-background leading-relaxed font-medium">
              {benefit}
            </p>
          </div>
        ))}
      </div>
    </div>

    <!-- Features (en la misma sección) -->
    <div>
      <div class="mb-12 lg:mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold text-text-primary dark:text-background mb-4">
          Características Principales
        </h2>
        <p class="text-base text-text-secundary dark:text-text-btnScroll max-w-2xl">
          Todo lo que incluye este servicio
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-6 lg:gap-8">
        {service.features.map((feature, index) => (
          <div class="group relative overflow-hidden p-6 lg:p-8 bg-white dark:bg-dark-surface rounded-2xl border-2 border-gray-200/50 dark:border-gray-700/50 hover:border-primary/50 dark:hover:border-primary/50 transition-all duration-300 hover:shadow-lg">
            {/* Decoración de fondo sutil */}
            <div class="absolute top-0 right-0 w-32 h-32 bg-primary/5 rounded-full blur-3xl group-hover:scale-150 transition-transform duration-500"></div>
            
            <div class="relative flex flex-col sm:flex-row gap-6 items-start">
              {feature.icon && (
                <div class="flex-shrink-0">
                  <div class="w-16 h-16 lg:w-20 lg:h-20 rounded-2xl bg-gradient-to-br from-primary/10 to-blue-400/10 dark:from-primary/20 dark:to-blue-400/20 flex items-center justify-center group-hover:scale-110 transition-transform duration-300 shadow-sm">
                    <span class="text-3xl lg:text-4xl">{feature.icon}</span>
                  </div>
                </div>
              )}
              <div class="flex-1 space-y-3">
                <div class="flex items-center gap-3">
                  <h3 class="text-xl lg:text-2xl font-bold text-text-primary dark:text-background">
                    {feature.title}
                  </h3>
                  <span class="hidden sm:inline-block px-2.5 py-0.5 bg-primary/10 dark:bg-primary/20 text-primary rounded-full text-xs font-semibold">
                    {String(index + 1).padStart(2, '0')}
                  </span>
                </div>
                <p class="text-base text-text-secundary dark:text-text-btnScroll leading-relaxed">
                  {feature.description}
                </p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Process + Gallery Combined Section -->
  <div class="bg-background-secondary dark:bg-dark-surface">
    <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-10 py-16 lg:py-24">
      <!-- Process -->
      <div class="mb-16 lg:mb-20">
        <div class="mb-12 lg:mb-16">
          <h2 class="text-3xl lg:text-4xl font-bold text-text-primary dark:text-background mb-4">
            Nuestro Proceso
          </h2>
          <p class="text-base text-text-secundary dark:text-text-btnScroll max-w-2xl">
            Así trabajamos para garantizar resultados excepcionales
          </p>
        </div>

        <div class="space-y-8 lg:space-y-12">
          {service.process.map((step) => (
            <div class="flex flex-col sm:flex-row gap-6 lg:gap-8 items-start">
              <div class="flex-shrink-0">
                <div class="w-12 h-12 lg:w-14 lg:h-14 rounded-full bg-primary flex items-center justify-center shadow-lg">
                  <span class="text-white font-bold text-base lg:text-lg">{step.step}</span>
                </div>
              </div>
              
              <div class="flex-1 space-y-3">
                <span class="inline-block px-3 py-1 bg-primary/10 dark:bg-primary/20 text-primary rounded-full text-xs font-semibold uppercase tracking-wide">
                  Paso {step.step}
                </span>
                <h3 class="text-xl lg:text-2xl font-semibold text-text-primary dark:text-background">
                  {step.title}
                </h3>
                <p class="text-base text-text-secundary dark:text-text-btnScroll leading-relaxed">
                  {step.description}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Gallery (en la misma sección si existe) -->
      {service.images.gallery && service.images.gallery.length > 0 && (
        <div>
          <div class="mb-12 lg:mb-16">
            <h2 class="text-3xl lg:text-4xl font-bold text-text-primary dark:text-background">
              Galería de Proyectos
            </h2>
          </div>

          <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
            {service.images.gallery.map((image, index) => (
              <div class="group overflow-hidden rounded-xl lg:rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300">
                <img 
                  src={image} 
                  alt={`Galería ${index + 1}`}
                  class="w-full h-48 sm:h-56 lg:h-64 object-cover group-hover:scale-105 transition-transform duration-300"
                />
              </div>
            ))}
          </div>
        </div>
      )}
    </div>
  </div>

  <!-- CTA Final -->
  <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-10 py-16 lg:py-24">
    <div class="bg-primary rounded-xl lg:rounded-2xl p-8 sm:p-10 lg:p-12 text-center">
      <div class="space-y-6 max-w-2xl mx-auto">
        <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-white">
          ¿Listo para comenzar?
        </h2>
        <p class="text-white/90 text-sm sm:text-base lg:text-lg leading-relaxed">
          Contacta con nosotros y descubre cómo podemos ayudarte a alcanzar tus objetivos
        </p>
        <a 
          href={service.cta.href}
          class="inline-flex items-center gap-2 px-6 sm:px-8 py-3 sm:py-4 bg-white text-primary rounded-xl font-semibold text-sm sm:text-base transition-all duration-300 hover:scale-105">
          {service.cta.text}
          <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>