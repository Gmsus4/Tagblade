---
// Oficinas
const oficinas = [
  {
    ciudad: "Madrid",
    direccion: "Calle Gran Vía, 28, 28013",
    telefono: "+34 911 234 567",
  },
  {
    ciudad: "Barcelona",
    direccion: "Avinguda Diagonal, 640, 08017",
    telefono: "+34 934 567 890",
  },
];

// Tecnologías que utilizamos
const tecnologias = [
  {
    nombre: "React",
    logo: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/react/react-original.svg",
  },
  {
    nombre: "Vue",
    logo: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/vuejs/vuejs-original.svg",
  },
  {
    nombre: "Angular",
    logo: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/angularjs/angularjs-original.svg",
  },
  {
    nombre: "Node.js",
    logo: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/nodejs/nodejs-original.svg",
  },
  {
    nombre: "WordPress",
    logo: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/wordpress/wordpress-plain.svg",
  },
  {
    nombre: "Tailwind",
    logo: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/tailwindcss/tailwindcss-plain.svg",
  },
];

// Datos para estadísticas
const estadisticas = [
  { valor: "150+", texto: "Proyectos completados" },
  { valor: "98%", texto: "Clientes satisfechos" },
  { valor: "24h", texto: "Tiempo de respuesta" },
  { valor: "5", texto: "Años de experiencia" },
];

// Array de testimonios para mostrar
const testimonios = [
  {
    nombre: "María López",
    empresa: "Estudio Creativo ML",
    texto:
      "Excelente servicio y atención. Mi sitio web quedó increíble y en tiempo récord.",
    avatar: "https://images.pexels.com/photos/774909/pexels-photo-774909.jpeg",
  },
  {
    nombre: "Carlos Ruiz",
    empresa: "Innovación Digital",
    texto:
      "Profesionales de primera. El proceso de desarrollo fue claro y el resultado superó nuestras expectativas.",
    avatar: "https://images.pexels.com/photos/220453/pexels-photo-220453.jpeg",
  },
];

// Array de preguntas frecuentes
const faqs = [
  {
    pregunta: "¿Cuánto tiempo toma desarrollar un sitio web?",
    respuesta:
      "Dependiendo de la complejidad, un sitio web puede estar listo entre 2 y 8 semanas.",
  },
  {
    pregunta: "¿Qué información necesitan para empezar?",
    respuesta:
      "Para comenzar necesitamos conocer tus objetivos, público objetivo y ejemplos de sitios que te gusten.",
  },
  {
    pregunta: "¿Ofrecen mantenimiento después del lanzamiento?",
    respuesta:
      "Sí, contamos con planes de mantenimiento adaptados a tus necesidades específicas.",
  },
];

// Datos de contacto adicionales
const contactInfo = {
  horario: "Lunes a Viernes: 9:00 - 18:00",
  email: "info@tuempresa.com",
  ubicacion: "Madrid, España",
};

---

<div
  class="max-w-screen-xl mx-auto px-4 lg:py-16 p-8 pb-4 flex gap-10 flex-col"
>
<!-- Por qué trabajar con nosotros (visible en todas las pantallas) -->
 <div class="bg-gray-50 dark:bg-dark-surface p-6 rounded-lg shadow-md border border-gray-100 dark:border-gray-800" data-aos="fade-left" data-aos-duration="800" data-aos-delay="400">
    <h4 class="font-medium text-gray-900 dark:text-white mb-2">¿Por qué trabajar con nosotros?</h4>
    <ul class="space-y-2">
        <li class="flex items-center text-gray-600 dark:text-gray-300">
        <svg class="w-4 h-4 mr-2 text-primary-600 dark:text-primary-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
        </svg>
        Proceso claro y definido
        </li>
        <li class="flex items-center text-gray-600 dark:text-gray-300">
        <svg class="w-4 h-4 mr-2 text-primary-600 dark:text-primary-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
        </svg>
        Comunicación constante
        </li>
        <li class="flex items-center text-gray-600 dark:text-gray-300">
        <svg class="w-4 h-4 mr-2 text-primary-600 dark:text-primary-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
        </svg>
        Resultados a tiempo
        </li>
    </ul>
  </div>

  <!-- CTA para reservar una consulta -->
  <div
    class="rounded-lg overflow-hidden shadow-lg border border-gray-200 dark:border-gray-700"
    data-aos="fade-up"
    data-aos-duration="800"
    data-aos-delay="500"
  >
    <div
      class="bg-primary bg-opacity-10 dark:bg-primary-dark dark:bg-opacity-30 p-4 text-center"
    >
      <h5 class="font-semibold text-primary-600 dark:text-primary-400">
        ¿Prefieres una consulta personalizada?
      </h5>
    </div>
    <div class="bg-white dark:bg-gray-800 p-5 text-center">
      <p class="text-gray-600 dark:text-gray-300 mb-4">
        Reserva una videollamada gratuita de 30 minutos con uno de nuestros
        especialistas
      </p>
      <a
        href="#"
        class="inline-block bg-primary hover:bg-primary-dark text-white font-medium rounded-lg text-sm px-5 py-2.5 transition-colors"
      >
        Reservar cita
      </a>
    </div>
  </div>

  <!-- Calendario de disponibilidad -->
  <div
    class="bg-gray-50 dark:bg-gray-800 rounded-lg p-6 shadow-md border border-gray-100 dark:border-gray-700"
    data-aos="fade-up"
    data-aos-duration="800"
    data-aos-delay="400"
  >
    <h4 class="font-medium text-gray-900 dark:text-white mb-4">
      Disponibilidad para reuniones
    </h4>
    <div class="grid grid-cols-7 gap-1 text-center mb-2">
      <div class="text-xs text-gray-500 dark:text-gray-400 font-medium">
        Lun
      </div>
      <div class="text-xs text-gray-500 dark:text-gray-400 font-medium">
        Mar
      </div>
      <div class="text-xs text-gray-500 dark:text-gray-400 font-medium">
        Mié
      </div>
      <div class="text-xs text-gray-500 dark:text-gray-400 font-medium">
        Jue
      </div>
      <div class="text-xs text-gray-500 dark:text-gray-400 font-medium">
        Vie
      </div>
      <div class="text-xs text-gray-500 dark:text-gray-400 font-medium">
        Sáb
      </div>
      <div class="text-xs text-gray-500 dark:text-gray-400 font-medium">
        Dom
      </div>
    </div>
    <div class="grid grid-cols-7 gap-1">
      {
        Array(7)
          .fill(0)
          .map((_, i) => (
            <div
              class={`p-2 rounded-md text-center ${i < 5 ? "bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200" : "bg-red-100 dark:bg-red-900 text-red-800 dark:text-red-200"}`}
            >
              <span class="text-xs">{i < 5 ? "9-18h" : "Cerrado"}</span>
            </div>
          ))
      }
    </div>
    <p class="text-sm text-gray-500 dark:text-gray-400 mt-3 text-center">
      Horario de atención para reuniones y consultas
    </p>
  </div>

  <!-- Nuestras oficinas -->
  <div
    class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-md"
    data-aos="fade-up"
    data-aos-duration="800"
    data-aos-delay="300"
  >
    <h4 class="font-medium text-gray-900 dark:text-white mb-4">
      Nuestras oficinas
    </h4>
    <div class="grid md:grid-cols-2 gap-4">
      {
        oficinas.map((oficina) => (
          <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-4">
            <h5 class="font-medium text-primary-600 dark:text-primary-400 text-lg">
              {oficina.ciudad}
            </h5>
            <div class="mt-2 space-y-2">
              <div class="flex items-start">
                <svg
                  class="w-5 h-5 text-gray-500 dark:text-gray-400 mr-2 mt-0.5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  />
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                  />
                </svg>
                <span class="text-sm text-gray-600 dark:text-gray-300">
                  {oficina.direccion}
                </span>
              </div>
              <div class="flex items-center">
                <svg
                  class="w-5 h-5 text-gray-500 dark:text-gray-400 mr-2"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  />
                </svg>
                <span class="text-sm text-gray-600 dark:text-gray-300">
                  {oficina.telefono}
                </span>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>

  <!-- Tecnologías que utilizamos -->
  <div
    class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-md"
    data-aos="fade-up"
    data-aos-duration="800"
    data-aos-delay="200"
  >
    <h4 class="font-medium text-gray-900 dark:text-white mb-5 text-center">
      Tecnologías que utilizamos
    </h4>
    <div class="flex flex-wrap justify-center gap-4">
      {
        tecnologias.map((tech) => (
          <div class="flex flex-col items-center justify-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg w-16 h-16">
            <img src={tech.logo} alt={tech.nombre} class="w-8 h-8" />
            <span class="text-xs text-gray-600 dark:text-gray-300 mt-1">
              {tech.nombre}
            </span>
          </div>
        ))
      }
    </div>
  </div>

  <!-- Estadísticas en tarjetas elegantes -->
  <div data-aos="fade-up" data-aos-duration="800" data-aos-delay="100">
    <div class="grid grid-cols-2 gap-4">
      {
        estadisticas.map((stat) => (
          <div class="bg-white dark:bg-gray-800 rounded-lg p-5 shadow-md text-center border-b-4 border-primary hover:border-primary-dark transition-colors">
            <div class="text-primary-600 dark:text-primary-400 text-3xl font-bold mb-2">
              {stat.valor}
            </div>
            <p class="text-gray-700 dark:text-gray-300 text-sm">{stat.texto}</p>
          </div>
        ))
      }
    </div>
  </div>

  <!-- Testimonios de clientes -->
  <div
    class="bg-white dark:bg-dark-surface p-6 rounded-lg shadow-md border border-gray-100 dark:border-gray-800"
    data-aos="fade-left"
    data-aos-duration="800"
    data-aos-delay="700"
  >
    <h4 class="font-medium text-gray-900 dark:text-white mb-4">
      Lo que dicen nuestros clientes
    </h4>
    <div class="space-y-6">
      {
        testimonios.map((testimonio) => (
          <div class="flex space-x-4 pb-4 border-b border-gray-200 dark:border-gray-700 last:border-b-0 last:pb-0">
            <div class="flex-shrink-0">
              <img
                src={testimonio.avatar}
                alt={`Avatar de ${testimonio.nombre}`}
                class="w-12 h-12 rounded-full object-cover"
              />
            </div>
            <div>
              <h5 class="font-medium text-gray-800 dark:text-gray-200">
                {testimonio.nombre}
              </h5>
              <p class="text-xs text-primary-600 dark:text-primary-400 mb-1">
                {testimonio.empresa}
              </p>
              <p class="text-sm text-gray-600 dark:text-gray-400">
                {testimonio.texto}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
  <!-- Preguntas frecuentes -->
  <div
    class="bg-gray-50 dark:bg-dark-surface p-6 rounded-lg shadow-md border border-gray-100 dark:border-gray-800"
    data-aos="fade-left"
    data-aos-duration="800"
    data-aos-delay="600"
  >
    <h4 class="font-medium text-gray-900 dark:text-white mb-4">
      Preguntas frecuentes
    </h4>
    <div class="space-y-4">
      {
        faqs.map((faq) => (
          <div class="border-b border-gray-200 dark:border-gray-700 pb-4 last:border-b-0 last:pb-0">
            <h5 class="font-medium text-gray-800 dark:text-gray-200 mb-1">
              {faq.pregunta}
            </h5>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              {faq.respuesta}
            </p>
          </div>
        ))
      }
    </div>
  </div>

  <!-- Información de contacto adicional -->
  <div
    class="bg-white dark:bg-dark-surface p-6 rounded-lg shadow-md border border-gray-100 dark:border-gray-800"
    data-aos="fade-left"
    data-aos-duration="800"
    data-aos-delay="500"
  >
    <h4 class="font-medium text-gray-900 dark:text-white mb-4">
      Información de contacto
    </h4>
    <div class="space-y-3">
      <div class="flex items-center">
        <svg
          class="w-5 h-5 mr-3 text-primary-600 dark:text-primary-400"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span class="text-gray-600 dark:text-gray-300"
          >{contactInfo.horario}</span
        >
      </div>
      <div class="flex items-center">
        <svg
          class="w-5 h-5 mr-3 text-primary-600 dark:text-primary-400"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
          ></path>
        </svg>
        <a
          href={`mailto:${contactInfo.email}`}
          class="text-primary-600 dark:text-primary-400 hover:underline"
          >{contactInfo.email}</a
        >
      </div>
      <div class="flex items-center">
        <svg
          class="w-5 h-5 mr-3 text-primary-600 dark:text-primary-400"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
          ></path>
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <span class="text-gray-600 dark:text-gray-300"
          >{contactInfo.ubicacion}</span
        >
      </div>
    </div>
  </div> 
</div>
