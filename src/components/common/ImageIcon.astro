---
interface Props {
  imageUrl: string;
  alt?: string;
  href: string;
  icon: any; // componente de icono (ejemplo importado desde lucide-react)
}

const { imageUrl, alt = "", href, icon: Icon } = Astro.props;
---

<div class="flex w-full h-auto items-center justify-center overflow-hidden">
  <div class="flex items-center flex-col flex-nowrap gap-[10px] h-auto w-full justify-center relative">
    <!-- Imagen -->
    <img src={imageUrl} alt={alt} class="h-full w-auto"/>

    <!-- Caja blanca decorativa -->
    <div class="bg-background dark:bg-dark-background rounded-tr-3xl h-14 w-14 z-10 overflow-visible absolute right-0 top-0 rotate-180">
      <!-- Sombras curvas -->
      <div class="aspect-square bg-transparent rounded-full shadow-[-24px_24px_0px_0px_#faf9f5] dark:shadow-[-24px_24px_0px_0px_#262624] absolute left-0 -top-12 w-12"></div>
      <div class="aspect-square bg-transparent rounded-full shadow-[-24px_24px_0px_0px_#faf9f5] dark:shadow-[-24px_24px_0px_0px_#262624] absolute bottom-0 -right-12 w-12"></div>

      <!-- Botón con icono -->
      <div class="absolute left-0 bottom-0">
        <a href={href} target="_blank" rel="noopener noreferrer"
           class="rounded-full bg-primary flex items-center justify-center p-3">
          <Icon class="h-6 w-6 text-white rotate-180" />
        </a>
      </div>
    </div>

    <div class="bg-background dark:bg-dark-background rounded-bl-3xl h-14 w-14 z-10 overflow-visible absolute left-0 bottom-0 rotate-180">
      <!-- Sombras curvas para esquina inferior izquierda -->
      <div class="aspect-square bg-transparent rounded-full shadow-[24px_-24px_0px_0px_#faf9f5] dark:shadow-[24px_-24px_0px_0px_#262624] absolute right-0 -bottom-12 w-12"></div>
      <div class="aspect-square bg-transparent rounded-full shadow-[24px_-24px_0px_0px_#faf9f5] dark:shadow-[24px_-24px_0px_0px_#262624] absolute top-0 -left-38 w-12"></div>

      <!-- Botón con icono inferior izquierda -->
      <div class="absolute right-0 top-0">
        <div class="bg-background dark:bg-dark-background rounded-bl-none rounded-full flex items-center justify-center p-3 rotate-180 w-40 h-14">
          <h2>Hola awesome</h2>
        </div>
      </div>
    </div>

  </div>
</div>
