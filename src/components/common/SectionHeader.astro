---
import LineDiv from './LineDiv.astro';

export interface Props {
    title: string;
    subtitle: string;
    icon: any;
}

const { title, subtitle, icon: Icon } = Astro.props;
const words = title.trim().split(" ");
const lastWord = words.pop();
const rest = words.join(" ");
---

<div class="flex flex-col items-center md:mb-16 mb-8" data-aos="fade-up" data-aos-duration="800">
    <!-- Icono decorativo sobre el título -->
    <div class="mb-6">
      <div class="relative">
        <div class="absolute -top-3 -left-3">
          <div class="w-6 h-6 bg-primary/20 rounded-full"></div>
        </div>
        <div class="rounded-full bg-primary/10 p-6 inline-block">
          <Icon class={"h-16 w-16 text-primary"}/>  
        </div>
        <div class="absolute -bottom-3 -right-3">
          <div class="w-6 h-6 bg-primary/20 rounded-full"></div>
        </div>
      </div>
    </div>
    
    <!-- Título con estilo destacado -->
    <h2 class="text-4xl lg:text-5xl font-bold text-center dark:text-white mb-6">
      <span class="relative z-10">
        <span class="relative">{rest} <span class="text-primary">{lastWord}</span></span>
        <span class="absolute bottom-1 left-0 w-full h-3 bg-primary/20 -z-10"></span>
      </span>
    </h2>
    
    <!-- Subtítulo amplio y centrado -->
    <div class="max-w-3xl mx-auto text-center">
      <p class="text-xl font-normal text-text-secundary dark:text-gray-300" data-aos="fade-up" data-aos-duration="800" data-aos-delay="200">
        {subtitle}
      </p>
    </div>

    <!-- Línea decorativa con detalle -->
     <LineDiv />
  </div>