---
export interface Props {
    title: string;
    subtitle: string;
    icon: string;
}

const { title, subtitle, icon } = Astro.props;
---

<div class="flex flex-col items-center mb-16" data-aos="fade-up" data-aos-duration="800">
    <!-- Icono decorativo sobre el título -->
    <div class="mb-6">
      <div class="relative">
        <div class="absolute -top-3 -left-3">
          <div class="w-6 h-6 bg-primary/20 rounded-full"></div>
        </div>
        <div class="rounded-full bg-primary/10 p-6 inline-block">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icon} />
          </svg>
        </div>
        <div class="absolute -bottom-3 -right-3">
          <div class="w-6 h-6 bg-primary/20 rounded-full"></div>
        </div>
      </div>
    </div>
    
    <!-- Título con estilo destacado -->
    <h2 class="text-4xl lg:text-5xl font-bold text-center text-gray-800 dark:text-white mb-6">
      <span class="relative z-10">
        <span class="relative">{title}</span>
        <span class="absolute bottom-1 left-0 w-full h-3 bg-primary/20 -z-10"></span>
      </span>
    </h2>
    
    <!-- Subtítulo amplio y centrado -->
    <div class="max-w-3xl mx-auto text-center">
      <p class="text-xl font-normal text-gray-700 dark:text-gray-300" data-aos="fade-up" data-aos-duration="800" data-aos-delay="200">
        {subtitle}
      </p>
    </div>

    <!-- Línea decorativa con detalle -->
    <div class="flex items-center justify-center w-full mt-10">
      <div class="h-0.5 bg-gray-200 dark:bg-gray-700 w-24"></div>
      <div class="mx-4">
        <div class="w-3 h-3 rotate-45 bg-primary"></div>
      </div>
      <div class="h-0.5 bg-gray-200 dark:bg-gray-700 w-24"></div>
    </div>
  </div>