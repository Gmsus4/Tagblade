---
import Image from "astro/components/Image.astro";
import Logo from "./Logo.astro";
---

<footer class="md:px-20 sm:px-10 px-5 bg-background dark:bg-dark-background">
    <div class=" mx-auto w-full max-w-screen-xl pt-20 pb-6 lg:py-8 px-4">
      <div class="md:flex md:justify-between">
        <div class="mb-6 md:mb-0">
          <Logo />
        </div>
        <div class="grid grid-cols-2 gap-8 sm:gap-6 sm:grid-cols-3">
          <div>
            <h2 class="mb-6 text-sm font-semibold text-dark-background uppercase dark:text-background">Recursos</h2>
            <ul class="text-gray-500 dark:text-gray-400 font-medium">
              <li class="mb-4">
                <a href="/blog" class="hover:underline">Blog</a>
              </li>
              <li>
                <a href="/guia-de-estilos" class="hover:underline">Guía de estilos</a>
              </li>
            </ul>
          </div>
          <div>
            <h2 class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white">Síguenos</h2>
            <ul class="text-gray-500 dark:text-gray-400 font-medium">
              <li class="mb-4">
                <a href="https://github.com/tagblade" class="hover:underline">GitHub</a>
              </li>
              <li>
                <a href="https://www.instagram.com/tagblade" class="hover:underline" target="_blank">Instagram</a>
              </li>
            </ul>
          </div>
          <div>
            <h2 class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white">Legal</h2>
            <ul class="text-gray-500 dark:text-gray-400 font-medium">
              <li class="mb-4">
                <a href="/privacidad" class="hover:underline">Aviso de privacidad</a>
              </li>
              <li>
                <a href="/terminos-condiciones" class="hover:underline">Términos y condiciones</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8" />
      <div class="sm:flex sm:items-center sm:justify-between">
        <span class="text-sm text-gray-500 sm:text-center dark:text-gray-400">© 2025 <a href="/" class="hover:underline">Tagblade™</a>. Todos los derechos reservados.</span>
        <div class="flex mt-4 sm:justify-center sm:mt-0">
          <!-- Puedes enlazar tus redes reales aquí -->
          <a href="https://www.facebook.com/tagblade" class="text-gray-500 hover:text-gray-900 dark:hover:text-white">
            <!-- Facebook icon -->
          </a>
          <a href="https://twitter.com/tagblade_dev" class="text-gray-500 hover:text-gray-900 dark:hover:text-white ms-5">
            <!-- Twitter icon -->
          </a>
          <a href="https://github.com/tagblade" class="text-gray-500 hover:text-gray-900 dark:hover:text-white ms-5">
            <!-- GitHub icon -->
          </a>
          <a href="https://www.linkedin.com/company/tagblade" class="text-gray-500 hover:text-gray-900 dark:hover:text-white ms-5">
            <!-- LinkedIn icon -->
          </a>
        </div>
      </div>
    </div>
  </footer>
  