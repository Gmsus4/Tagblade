---
import Image from "astro/components/Image.astro";
import FormContacto from "../../forms/FormContacto.astro";
import ContentBlock from "../../common/ContentBlock.astro";

---

<section id="contacto" class="-mt-0.5 md:px-20 sm:px-10 px-5 lg:scroll-mt-16 scroll-mt-12 w-full bg-background dark:bg-dark-background">
    <div class="max-w-screen-xl mx-auto px-4 lg:py-16 p-12 pb-4">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <!-- Formulario -->
        <div>
          <ContentBlock title="Contacto" delay="50" dataOs="fade-down" dataOsDuration="600">
            <p class="text-lg font-normal text-gray-500 dark:text-gray-400 mb-6" data-aos="fade-down" data-aos-duration="600" data-aos-delay="100">
              ¿Tienes una idea en mente? Hablemos y la hacemos realidad.
            </p>
          </ContentBlock>
          <FormContacto />
        </div>
  
        <!-- Imagen -->
        <div class="hidden lg:block h-full" data-aos="fade-left" data-aos-duration="1200" data-aos-delay="300">
          <Image src={"https://images.pexels.com/photos/1797161/pexels-photo-1797161.jpeg"} alt={"Ilustración de contacto"} width={30} height={30} class={"h-full w-auto object-cover rounded-2xl"} loading="lazy"/>
        </div>
      </div>
    </div>
  </section>
  