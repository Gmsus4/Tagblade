---
import Image from "astro/components/Image.astro";
import FormContacto from "../../forms/FormContacto.astro";
import ContentBlock from "../../common/ContentBlock.astro";
import WhatsAppBanner from "../../common/WhatsAppBanner.astro";

import { procesosData, sectionTexts } from "../../../js/datos";

export interface Props {
  title?: string;
  subtitle?: string;
  whatsappNumber?: string;
}
const { 
  title = "Contacto", 
  subtitle = "¿Tienes una idea en mente? Hablemos y la hacemos realidad.",
  whatsappNumber = "+34600000000" // Reemplaza con tu número real
} = Astro.props;

// Función para formatear el número de WhatsApp para el enlace
const getWhatsappLink = (number: string) => {
  // Eliminar todos los caracteres no numéricos
  const cleanNumber = number.replace(/\D/g, '');
  return `https://wa.me/${cleanNumber}`;
};
---

<section id="contacto" class="-mt-0.5 md:px-20 sm:px-10 px-5 lg:scroll-mt-18 scroll-mt-12 w-full bg-background dark:bg-dark-background flex items-center justify-center lg:min-h-[calc(100vh-70px)]">
  <div class="max-w-screen-xl mx-auto md:px-4 px-1 lg:py-16 p-8 pb-4">
    <div class="grid lg:grid-cols-2 gap-16 items-start">
      <!-- Formulario -->
      <div>
        <ContentBlock title={title} className="text-left text-3xl lg:text-4xl" delay="50" dataOs="fade-down" dataOsDuration="600">
          <p class="text-lg font-normal text-gray-500 dark:text-gray-400 mb-6" data-aos="fade-down" data-aos-duration="600" data-aos-delay="100">
            {subtitle}
          </p>
        </ContentBlock>
        <WhatsAppBanner getWhatsappLink={getWhatsappLink} whatsappNumber={whatsappNumber}/>
        <FormContacto />
      </div>
      
      <!-- Columna derecha con contenido adicional -->
      <div class="flex flex-col gap-4 h-full">
        <!-- Imagen principal (visible en pantallas grandes) -->
        <div class="hidden lg:block relative rounded-2xl overflow-hidden shadow-xl" data-aos="fade-left" data-aos-duration="1200" data-aos-delay="300">
          <Image 
            src={"https://images.pexels.com/photos/1797161/pexels-photo-1797161.jpeg"} 
            alt={"Ilustración de contacto"} 
            width={600} 
            height={800} 
            class={"w-full h-auto object-cover rounded-2xl hover:scale-105 transition-transform duration-500"} 
            loading="lazy"
          />
          <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/70 to-transparent p-6">
            <h3 class="text-white text-xl font-bold">Estamos listos para ayudarte</h3>
            <p class="text-gray-200 mt-2">Tu proyecto web es nuestra prioridad</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>