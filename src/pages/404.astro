---
import { navbarLinks, contactInfo } from "../js/datos";
import Navbar from "../components/common/Navbar.astro";
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
import '@fontsource-variable/onest';
---

<Layout>
    <Navbar links={navbarLinks}  whatsappNumber={contactInfo.phone}/>
    <main class="grid min-h-full place-items-center bg-background dark:bg-dark-background px-6 py-24 sm:py-32 lg:px-8">
    <div class="text-center">
        <p class="text-8xl font-semibold text-primary dark:text-primary">404</p>
        <h1 class="mt-4 text-5xl font-semibold tracking-tight text-balance text-dark-background dark:text-background sm:text-7xl">Página no encontrada</h1>
        <p class="mt-6 text-lg font-medium text-pretty text-gray-500 sm:text-xl/8">Lo sentimos, no pudimos encontrar la página que estás buscando.</p>
        <div class="mt-10 flex items-center justify-center gap-x-6">
        <a href="/" class="rounded-md bg-primary px-3.5 py-2.5 text-sm font-semibold text-background shadow-xs hover:bg-primary-dark">Regresar al inicio</a>
        <!-- <a href="#" class="text-sm font-semibold text-gray-900">Contact support <span aria-hidden="true">&rarr;</span></a> -->
        </div>
    </div>
    </main>
</Layout>
